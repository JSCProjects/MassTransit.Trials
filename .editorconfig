# Top-most EditorConfig file.
root = true

# Generic cross-platform settings.
[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# .NET code files.
[*.{cs,csx,vb,vbx}]
charset = utf-8-bom
indent_size = 4

# .NET project files.
[*.{csproj,deployproj,proj,projitems,shproj,vbproj,vcxproj,vcxproj.filters}]
indent_size = 2

# .NET config files.
[*.{config,nuspec,props,resx,ruleset,targets,vsct,vsixmanifest}]
indent_size = 2

# JSON files.
[*.json]
indent_size = 2

# Powershell files.
[*.ps1]
indent_size = 2

# Shell script files.
[*.sh]
indent_size = 2

# .NET solution files.
[*.sln]
indent_style = tab

# YAML files.
[*.yml,yaml]
indent_size = 2
